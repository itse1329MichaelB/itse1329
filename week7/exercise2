fun factorial(n: Int): Long {
  var result = 1L
  for (i in 1..n) {
    result *= i
  }
  return result
}

fun sumOfFactorials(n: Int): Long {
  var result = 0L
  for (i in 1..n) {
    result += factorial(i)
  }
    return result
}
//4037913
fun main() {
  println(sumOfFactorials(10))  // 4037913
}
